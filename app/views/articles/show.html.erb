<p style="color: green"><%= notice %></p>
<%= render @article %>
<div class="container">
  <% if user_signed_in?%>
    <div class="row">
      <div class="col">
        <%= link_to "Back to articles", articles_path, class:"btn btn-outline-info" %>
      </div>
      <div class="col">
        <%= link_to "Edit this article", edit_article_path(@article), class:"btn btn-outline-success" %>
      </div>
      <div class="col">
        <%= button_to "Destroy this article", @article, method: :delete, class:"btn btn-outline-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </div>
  <% end %>
</div>
